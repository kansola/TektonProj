pipeline {

    agent any

    stages {

        stage("build") {

            steps {
                echo "building the application..."
                sleep 30

            }
        }

        stage("test") {
            
            steps {
                echo "testing the application..."
                sleep 30

            }
        }

        stage("deploy") {
            
            steps {
                echo "deploying the application..."
                sleep 30

            }
        }
    }
}
